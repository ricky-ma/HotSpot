<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Page3Info" >
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/ButtonLayout" android:paddingTop="20dp"
                      android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:paddingBottom="20dp"
                      android:showDividers="middle"
                      android:divider="@drawable/divider">
            <ImageView
                    android:layout_width="184dp"
                    android:layout_height="98dp"
                    android:id="@+id/imageView_pos_people"
                    android:layout_gravity="center"/>
            <ImageView
                    android:layout_width="268dp"
                    android:layout_height="59dp"
                    android:id="@+id/imageView_pos_stars"
                    android:layout_gravity="center"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp" android:id="@+id/textLayout"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

